@model TaskPro.Models.EditUserViewModel
@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/ModalLayout.cshtml";
}

<!DOCTYPE html>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<html>
<head>
    <style>
        body {
            background-image: url('/images/background-task.png');
            background-size: cover;
            background-repeat: no-repeat;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.8);
            border: 1px solid #ddd;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Usuario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-6 col-md-8">

                <div class="card bg-black">
                    <div class="card-header d-flex justify-content-center">
                        <img src="/images/taskpro2.png" style="width: 150px; height: auto;" />
                    </div>
                    <div class="card-body">

                        <form asp-controller="Account" asp-action="ChangeUser" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            
                            <input class="form-control mb-3" type="text" placeholder="Nombre" asp-for="Nombre" required />
                            <input class="form-control mb-3" type="text" placeholder="Apellidos" asp-for="Apellidos" required />                                                      
                            <div class="form-group">
                                <label>Imagen</label>
                                <input type="file" class="form-control mb-3" name="file" asp-for="URLFoto">
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a asp-action="ChangePassword" class="btn btn-success">Cambiar Contraseña</a>
                            </div>                                                      
                        </form>
                    </div>
                    <div class="col-md-12">
                        <div class="card bg-black">
                            <div class="card-body d-flex justify-content-center">
                                <img src="@Model.URLFoto" style="width:200px;height:200px;border-radius:50%" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



@if (ViewData["AlertMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            Swal.fire({
                title: 'Error',
                text: '@ViewData["AlertMessage"]',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        });
    </script>
}

@if (ViewData["Message"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            Swal.fire({
                title: 'Exito',
                text: '@ViewData["Message"]',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        });
    </script>
}
