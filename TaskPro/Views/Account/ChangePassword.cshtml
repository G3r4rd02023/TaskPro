@model TaskPro.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = "~/Views/Shared/ModalLayout.cshtml";
}

<!DOCTYPE html>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<html>
<head>
    <style>
        body {
            background-image: url('/images/background-task.png');
            background-size: cover;
            background-repeat: no-repeat;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.8);
            border: 1px solid #ddd;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card bg-black">
                    <div class="card-header d-flex justify-content-center">
                        <img src="/images/taskpro2.png" style="width: 150px; height: auto;" />
                    </div>
                    <div class="card-body">

                        <form asp-controller="Account" asp-action="ChangePassword" method="post" enctype="multipart/form-data">                                                                                                            
                            <input class="form-control mb-3" type="password" placeholder="Contraseña actual" asp-for="OldPassword" required />
                            <input class="form-control mb-3" type="password" placeholder="Nueva Contraseña " asp-for="NewPassword" required />
                            <input class="form-control mb-3" type="password" placeholder="Confirmar Contraseña " asp-for="Confirm" required />
                           
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Cambiar contraseña</button>
                                <a asp-action="ChangeUser" class="btn btn-success">Regresar</a>
                            </div>
                                                       
                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



@if (ViewData["AlertMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            Swal.fire({
                title: 'Error',
                text: '@ViewData["AlertMessage"]',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        });
    </script>
}

@if (ViewData["Message"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            Swal.fire({
                title: 'Exito',
                text: '@ViewData["Message"]',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        });
    </script>
}


